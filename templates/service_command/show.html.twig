{% extends 'layout.html.twig' %}

{% block title %}ServiceCommand #{{ service_command.id }} {% endblock %}

{% block page_content %}
<div class="row">
    <div class="col-md-4">

        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Подробная информация</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form class="form-horizontal">
                <div class="card-body">
                    <div class="form-group row">
                        <label for="field-1" class="col-sm-4 col-form-label">Type</label>
                        <div class="col-sm-8">
                            {{ service_command.type }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="field-1" class="col-sm-4 col-form-label">Id</label>
                        <div class="col-sm-8">
                            {{ service_command.id }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="field-1" class="col-sm-4 col-form-label">Data</label>
                        <div class="col-sm-8">
                            {{ service_command.data ? service_command.data|json_encode : '' }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="field-1" class="col-sm-4 col-form-label">IsActive</label>
                        <div class="col-sm-8">
                            {{ service_command.isActive ? 'Yes' : 'No' }}
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
