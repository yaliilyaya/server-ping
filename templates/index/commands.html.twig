{% extends 'layout.html.twig' %}

{% block title %}Список комманд сервиса #{{ service.id }} {% endblock %}

{% block page_content %}

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Название</h3>
            <div class="card-tools">
                <a class="btn btn-success btn-sm" href="{{ path('config', { serviceId:service.id }) }}" >Настройка сервиса</a>
            </div>
        </div>
        <div class="card-body">
            <div class="tab-content" id="custom-content-below-tabContent">
                <div class="tab-pane fade show active" id="tab-1" role="tabpanel" aria-labelledby="">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th width="10">#</th>
                            <th>Название</th>
                            <th>Статус</th>
                            <th>Настройки</th>

{#                            <th width="80">Действие</th>#}
                        </tr>
                        </thead>
                        <tbody>
                        {% for key, command in commands %}
                            <tr>
                                <td>#{{ command.id }}</td>
                                <td>{{ command.type }}</td>
                                <td>{{ command.status }}</td>
                                <td>{{ command.data | json_encode }}</td>
{#                                <td>#}
{#                                    <div class="btn-group">#}
{#                                        <a href="{{ path('parse.command', {id: command.id}) }}"  class="btn btn-info btn-sm">#}
{#                                            <span class="fas fa-upload"></span>#}
{#                                        </a>#}

{#                                    </div>#}
{#                                </td>#}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
                <div class="tab-pane fade" id="tab-2" role="tabpanel" aria-labelledby=""></div>
                <div class="tab-pane fade" id="tab-3" role="tabpanel" aria-labelledby=""></div>
            </div>

        </div>

    </div>
{% endblock %}