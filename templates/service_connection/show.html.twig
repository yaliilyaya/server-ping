{% extends 'layout.html.twig' %}

{% block title %}ServiceConnection #{{ service_connection.id }} {% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-4">

            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Подробная информация</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form class="form-horizontal">
                    <div class="card-body">
                        <div class="form-group row">
                            <label for="field-1" class="col-sm-4 col-form-label">Name</label>
                            <div class="col-sm-8">
                                {{ service_connection.name }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="field-1" class="col-sm-4 col-form-label">Ip</label>
                            <div class="col-sm-8">
                                {{ service_connection.ip }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="field-1" class="col-sm-4 col-form-label">Data</label>
                            <div class="col-sm-8">
                                {{ service_connection.data ? service_connection.data|json_encode : '' }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="field-1" class="col-sm-4 col-form-label">IsActive</label>
                            <div class="col-sm-8">
                                {{ service_connection.isActive ? 'Yes' : 'No' }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="field-1" class="col-sm-4 col-form-label">Status</label>
                            <div class="col-sm-8">
                                {{ service_connection.status }}
                            </div>
                        </div>
                    </div>
                </form>
                <div class="card-footer">
                    <div class="btn-group-vertical btn-block">
                        {{ include('service_connection/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
